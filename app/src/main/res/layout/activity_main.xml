<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">
            <include layout="@layout/app_bar"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/dark_blue_start_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/course"
                    android:text="YR. 10-MH-ST."
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/ticket_paym"/>
                <TextView
                    android:id="@+id/med"
                    android:text="ENG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/ticket_paym"
                    android:textSize="10sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/med_desc"
                android:layout_gravity="center"
                android:text="(Std. 10th Maharashtra State English Medium)"
                android:textSize="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--        <include layout="@layout/cources_options"/>-->
            <ProgressBar
                android:id="@+id/loader"
                android:layout_gravity="center"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp" />
            <TextView
                android:id="@+id/txtNoVidFound"
                android:text="No Videos Found"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/_20sdp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:background="@color/ferry_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">
                <com.jarvanmo.exoplayerview.ui.ExoVideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    app:controller_display_mode="all"
                    app:resize_mode="fill"
                    app:default_artwork="@drawable/default_art"
                    app:use_artwork="true" />
                <TextView
                    android:text="Skip >>"
                    android:textColor="@color/white"
                    android:id="@+id/skip_btn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_25sdp"
                    android:background="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/_25sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/videosList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/videolist_item"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@drawable/download_black"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/options"/>
</androidx.drawerlayout.widget.DrawerLayout>